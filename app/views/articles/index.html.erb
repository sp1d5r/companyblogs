<h1> this is a list of all the articles </h1>
<p>
  <%= link_to "Create a new article", new_article_path %>
</p><br/>
<table>
  <tr>
    <th>Tile</th>
    <th>Description</th>
  </tr>

  <% @articles.each do |article| %>
  <tr>
    <td><%= article.title %></td>
    <td><%= article.descriptions %></td>
    <td><%=  link_to "Edit", edit_article_path(article) %></td>
    <td><%= link_to "Show", article_path(article) %></td>
    <td><%= link_to "Delete", article_path(article), method: :delete, data: {confirm: "Are you sure, you want to delete this article??"}%></td>
  </tr>
  <% end %>

</table>